generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  date            DateTime // Start of the booked slot (UTC)
  participantCount Int
  customerName    String
  customerKana    String?
  customerEmail   String
  couponCode      String?
  couponDiscount  Int? // Discount in yen
  price           Int    // Final price in yen
  paymentIntentId String? // Stripe payment intent
  status          String  // e.g. 'pending', 'paid', 'cancelled'
  notes           String?

  // Prevent double-booking: only one booking per date/time slot
  @@unique([date])
}

model Availability {
  id        String   @id @default(uuid())
  day       String   // e.g. 'monday', 'tuesday', etc.
  startTime String   // e.g. '12:00'
  endTime   String   // e.g. '20:00'
}
